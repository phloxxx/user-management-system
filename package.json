{
  "name": "user-management-system",
  "version": "1.0.0",
  "description": "Integrated User Management System",
  "main": "node-mysql-boilerplate-api/server.js",
  "scripts": {
    "install:frontend": "cd angular-signup-verification-boilerplate && npm install",
    "install:backend": "cd node-mysql-boilerplate-api && npm install",
    "install:all": "npm run install:backend",
    "build": "cd node-mysql-boilerplate-api && npm install",
    "start": "node node-mysql-boilerplate-api/server.js",
    "start:frontend": "cd angular-signup-verification-boilerplate && ng serve",
    "start:backend": "cd node-mysql-boilerplate-api && npm start",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "dev:server": "nodemon node-mysql-boilerplate-api/server.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bootstrap": "^5.3.6",
    "concurrently": "^8.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-jwt": "^8.4.1",
    "joi": "^17.13.3",
    "mysql2": "^2.1.0",
    "nodemailer": "^6.4.11",
    "rootpath": "^0.1.2",
    "sequelize": "^6.3.4",
    "swagger-ui-express": "^4.6.3",
    "yamljs": "^0.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
