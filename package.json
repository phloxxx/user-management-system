{
  "name": "user-management-system",
  "version": "1.0.0",
  "description": "Integrated User Management System",
  "main": "node-mysql-boilerplate-api/server.js",
  "scripts": {
    "install:frontend": "cd angular-signup-verification-boilerplate && npm install",
    "install:backend": "cd node-mysql-boilerplate-api && npm install",
    "install:all": "npm run install:frontend && npm run install:backend",
    "start:frontend": "cd angular-signup-verification-boilerplate && ng serve",
    "start:backend": "cd node-mysql-boilerplate-api && npm start",
    "start": "node node-mysql-boilerplate-api/server.js",
    "start:dev": "nodemon node-mysql-boilerplate-api/server.js",
    "dev": "nodemon node-mysql-boilerplate-api/server.js",
    "build": "npm run build:backend && npm run build:frontend && npm run copy:dist",
    "build:backend": "cd node-mysql-boilerplate-api && npm install",
    "build:frontend": "cd angular-signup-verification-boilerplate && npm install && ng build --configuration=production",
    "copy:dist": "mkdir -p node-mysql-boilerplate-api/public && cp -r angular-signup-verification-boilerplate/dist/angular-signup-verification-boilerplate/* node-mysql-boilerplate-api/public/",
    "copy:dist:win": "if not exist .\\node-mysql-boilerplate-api\\public mkdir .\\node-mysql-boilerplate-api\\public && xcopy .\\angular-signup-verification-boilerplate\\dist\\angular-signup-verification-boilerplate .\\node-mysql-boilerplate-api\\public\\ /E /I /Y",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "joi": "^17.13.3",
    "express-jwt": "^8.4.1",
    "rootpath": "^0.1.2",
    "mysql2": "^3.9.2",
    "sequelize": "^6.37.1",
    "bcryptjs": "^2.4.3",
    "nodemailer": "^6.9.12",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0"
  },
  "engines": {
    "node": ">=22.13.1"
  }
}